<%= form_for @recipe, html: { multipart: true } do |f| %>


 <div class="field">
   <%= f.label :description %><br>
   <%= f.text_area :description %>
 </div>
 <div class="field">
    <%= f.label :image %><br>
    <%= f.file_field :image %>
  </div>

 <div class="actions">
   <%= f.submit %>
 </div>
<% end %>
